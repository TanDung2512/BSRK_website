<!DOCTYPE html>
<html lang="en">
<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
<head>
  <!-- Meta tag -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="shortcut icon" href="/assets/img/logo_BSRK.ico" type="image/x-icon">
  <!-- Title tag -->
  <title>Học viện BSRK</title>
  <!-- css -->
  <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
  <link rel="stylesheet" href="/assets/css/fontawesome.min.css">
  <link rel="stylesheet" href="/assets/css/themify-icons.css">
  <link rel="stylesheet" href="/assets/css/owl.carousel.min.css">
  <link rel="stylesheet" href="/assets/css/jquery.fancybox.min.css">
  <link rel="stylesheet" href="/assets/css/animate.css">
  <link rel="stylesheet" href="/assets/css/main.css">

</head>

<style >
  .bio--subtitle{
    font-family: kanit; font-size : 25px;
  }
  .bio--title{

  }
  .bio--text{
    margin: 10px 0px;
    
    font-family:  Helvetica; font-weight: 300;
  }
</style>
<body>
<!--========================================================

                        HEADER

=========================================================-->
  <%- include('./components/header', {name : name}); %>
  <section class="curriculum">
    <div class="container-fluid d-flex flex-column align-items-center justify-content-center " style = "color :#5e5e5e; padding-top : 200px; background-color : white">
            <h4 style ="color :#5e5e5e;">Giám Đốc Học Viện</h4>
            <h2 class="mb30 mb-4 text-center" style="color : #7f4782; font-weight: 1000; 
            font-size : 3em; font-family: Kanit;">Theresa Hương</h2>
        
        <div class="row" style="background-repeat: no-repeat; background-position: center; padding-bottom : 200px">
        <div class = "col-md-2"></div>
        <div  class = "col-md-5" style=" font-size : 22px; ;font-family: Now; font-weight: bold">
        <h5>
          Tiểu Sử
        </h5>
        <% for(var i=0; i < bio.length; i++) { %>
          <p class = "bio--text">
            <b class ="bio--subtitle"><%= bio[i].title %></b>
            <%= bio[i].content %>
          </p>
        <% } %>
        </div>
        <div class = "col-md-3 ml-md-5">
            <img src= <%= image %> width=230 alt="" />
        </div>
      </div>

      <!-- <%- include('./components/courses'); %> -->
    </div>
  </section>

  <!--========================================================
                          FOOTER
  =========================================================-->
  <%- include('./components/footer'); %>

  <!--========================================================
                        Loader and toTop
  =========================================================-->
  <div id="preloader">
    <div class="preloader">
      <span></span>
      <span></span>
    </div>
  </div>

  <div id="toTop">
    <i class="ti-arrow-up"></i>
  </div>

  <!-- js -->
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js  "></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Counter-Up/1.0.0/jquery.counterup.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
  <script src="/assets/js/custom.js"></script>
</body>
</html>